{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "jsx": true,
    "sourceType": "module"
  },

  "extends" : [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "es6": true
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "react/jsx-curly-spacing": [2, "always"],
    "comma-dangle": [1, "always-multiline"],
    "no-duplicate-imports": [0],
    "no-unused-vars": [2, { "varsIgnorePattern": "^_" }],
    "space-infix-ops": [0]
  }
}
